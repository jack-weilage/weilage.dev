{
	"semi": false,
	"singleQuote": true,
	"useTabs": true,
	"proseWrap": "always",

	"plugins": [
		"prettier-plugin-svelte",
		"prettier-plugin-organize-imports",
		"prettier-plugin-packagejson",
		"prettier-plugin-tailwindcss"
	],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte",
				"organizeImportsSkipDestructiveCodeActions": true
			}
		}
	]
}
